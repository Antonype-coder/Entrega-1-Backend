<h1 class="mb-4">Todos los Productos</h1>

{{#if products.length}}
<div class="row">
    {{#each products}}
    <div class="col-md-4 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.description}}</p>
                <p class="card-text"><strong>${{this.price}}</strong></p>
                <p class="card-text">Stock: {{this.stock}}</p>
                <span class="badge bg-primary">{{this.category}}</span>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<div class="alert alert-info text-center">
    <h4>No hay productos disponibles</h4>
    <p>Ve a la vista de <a href="/realtimeproducts">Tiempo Real</a> para agregar productos.</p>
</div>
{{/if}}

<div class="text-center mt-4">
    <a href="/realtimeproducts" class="btn btn-success">Agregar Productos en Tiempo Real</a>
</div>